<div class="jumbotron text-center">
    <h1 class="display-3">Success!</h1>
    <p class="lead"><strong>Please check your email</strong> </p>
    <hr>

    <div class="row">
        <div class="col-6">
            <form id="form">
                <div class="form-group">
                    <label for="exampleFormControlInput1">Name:</label>
                    <input type="text" readonly class="form-control-plaintext" id="name" value="{{UserId}}">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlInput1">Room:</label>
                    <input type="text" readonly class="form-control-plaintext" id="room" value="{{RoomId}}">
                </div>
                <div class="form-group1">
                    <label for="exampleFormControlInput1">Arrival Date:</label>
                    <input type="text" readonly class="form-control-plaintext" id="arrive" value="{{arrival_date}}">
                </div>
                <div class="form-group2">
                    <label for="exampleFormControlInput1">Departure Date:</label>
                    <input type="text" readonly class="form-control-plaintext" id="depart" value="{{depart_date}}">
                </div>
                <div class="form-group3">
                    <label for="exampleFormControlInput1">Number of Nights:</label>
                    <input type="text" readonly class="form-control-plaintext" id="totalNights" value="{{num_night}}">
                </div>
            </form>
        </div>
        <div class="col-6">
            <div class="padding">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="card">
                            <div class="card-header">
                                <strong>Credit Card</strong>
                                <small>enter your card details</small>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <label for="name">Name</label>
                                            <input class="form-control" id="name" type="text"
                                                placeholder="Enter your name">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <label for="ccnumber">Credit Card Number</label>
                                            <div class="input-group">
                                                <input class="form-control" type="text"
                                                    placeholder="0000 0000 0000 0000" autocomplete="email">
                                                <div class="input-group-append">
                                                    <span class="input-group-text">
                                                        <i class="mdi mdi-credit-card"></i>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-sm-4">
                                        <label for="ccmonth">Month</label>
                                        <select class="form-control" id="ccmonth">
                                            <option>1</option>
                                            <option>2</option>
                                            <option>3</option>
                                            <option>4</option>
                                            <option>5</option>
                                            <option>6</option>
                                            <option>7</option>
                                            <option>8</option>
                                            <option>9</option>
                                            <option>10</option>
                                            <option>11</option>
                                            <option>12</option>
                                        </select>
                                    </div>
                                    <div class="form-group col-sm-4">
                                        <label for="ccyear">Year</label>
                                        <select class="form-control" id="ccyear">

                                            <option>2020</option>
                                            <option>2021</option>
                                            <option>2022</option>
                                            <option>2023</option>
                                            <option>2024</option>
                                            <option>2025</option>
                                            <option>2026</option>
                                            <option>2027</option>
                                            <option>2028</option>
                                            <option>2029</option>
                                            <option>2030</option>
                                            <option>2031</option>
                                        </select>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <label for="cvv">CVV/CVC</label>
                                            <input class="form-control" id="cvv" type="text" placeholder="123">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <button class="btn btn-sm btn-success float-right" type="submit">
                                    <i class="mdi mdi-gamepad-circle"></i> Continue</button>
                                <button class="btn btn-sm btn-danger" type="reset">
                                    <i class="mdi mdi-lock-reset"></i> Reset</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr>
    <p><a href="/">Return to Main Page</a> or <a href="/logout">Logout</a></p>
    <p>
        Having trouble? <a href="">Contact us</a>
    </p>
    <p class="lead">
        <button type="button" class="btn btn-success success-btn">Complete Purchase</button>
        <button type="button" class="btn btn-danger cancel-btn">Cancel</button>
    </p>
</div>

<footer>
    <script src="/js/booking.js"></script>
</footer>