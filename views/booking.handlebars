<div class="jumbotron text-center">
    <h1 class="display-3">Thank You!</h1>
    <p class="lead"><strong>Please confirm your details</strong> </p>
    <hr>

    <form id="form">
        <div class="form-group">
            <label for="exampleFormControlInput1">Name:</label>
            <input type="string" class="form-control" id="name" value="{{name}}">
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">Email:</label>
            <input type="string" class="form-control" id="email" value="{{email}}">
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">Room Number:</label>
            <input type="string" class="form-control" id="roomNum" value="{{room_number}}">
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">Room Description:</label>
            <input type="string" class="form-control" id="roomDes" value="{{room_desc}}">
        </div>
        <div class="form-group1">
            <label for="exampleFormControlInput1">Arrival Date:</label>
            <input type="string" class="form-control" id="arrive">
        </div>
        <div class="form-group2">
            <label for="exampleFormControlInput1">Departure Date:</label>
            <input type="string" class="form-control" id="depart">
        </div>
        <div class="form-group3">
            <label for="exampleFormControlInput1">Number of Nights:</label>
            <input type="string" class="form-control" id="totalNights">
        </div>
    </form>

    <hr>
    <p>
        Having trouble? <a href="">Contact us</a>
    </p>
    <p class="lead">
        <button type="button" class="btn btn-success success-btn">Complete Purchase</button>
        <button type="button" class="btn btn-danger cancel-btn">Cancel</button>
    </p>
</div>

<footer>
    <script src="/js/booking.js"></script>
</footer>